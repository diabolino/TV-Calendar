{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "TVCalendar",
  "version": "3.0.1",
  "identifier": "com.tvcalendar",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "TV Calendar",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/diabolino/TV-Calendar/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDdDMTFEMzI2Mzg2MUVFMUQKUldRZDdtRTRKdE1SZkxTZThMQ1hodS9nQUdGbmxvZVAyVWxIczNoMDVIWkRwMlpxa2YyZEEvU2oK"
    }
  }
}
