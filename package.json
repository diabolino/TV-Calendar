{
  "name": "tv-calendar",
  "version": "1.9.4",
  "description": "Application de calendrier TV moderne",
  "main": "electron.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win --x64",
    "dist:win32": "npm run build && electron-builder --win --ia32",
    "dist:mac": "npm run build && electron-builder --mac --x64",
    "dist:mac-arm": "npm run build && electron-builder --mac --arm64",
    "dist:mac-intel": "npm run build && electron-builder --mac --x64",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:all": "npm run build && electron-builder -mwl"
  },
  "build": {
    "appId": "com.tvcalendar.app",
    "productName": "TVCalendar",
    "publish": null,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron.js",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        },
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.png",
      "artifactName": "${productName}-${version}-Windows-${arch}.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable.exe"
    },
    "nsis": {
      "artifactName": "${productName}-${version}-Setup.${ext}",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.png",
      "category": "public.app-category.entertainment",
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "type": "distribution"
    },
    "dmg": {
      "sign": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.png",
      "category": "AudioVideo",
      "artifactName": "${productName}-${version}-Linux-${arch}.${ext}"
    }
  },
  "dependencies": {
    "axios": "^1.6.2",
    "firebase": "^12.3.0",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  }
}